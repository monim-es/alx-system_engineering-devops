#!/usr/bin/env bash
# Script that displays information about subdomains

# Function to get subdomain information
get_subdomain_info() {
    local domain="$1"
    local subdomain="$2"
    local full_domain="${subdomain}.${domain}"
    
    # Use dig to get DNS information and extract record type and destination
    local dig_output
    dig_output=$(dig "$full_domain" | grep -A1 'ANSWER SECTION:' | tail -1)
    
    if [[ -n "$dig_output" ]]; then
        local record_type
        local destination
        record_type=$(echo "$dig_output" | awk '{print $4}')
        destination=$(echo "$dig_output" | awk '{print $5}')
        
        echo "The subdomain $subdomain is a $record_type record and points to $destination"
    fi
}

# Main script logic
domain="$1"
subdomain="$2"

# Check if domain parameter is provided
if [[ -z "$domain" ]]; then
    echo "Usage: $0 <domain> [subdomain]"
    exit 1
fi

# If subdomain is specified, show info for that subdomain only
if [[ -n "$subdomain" ]]; then
    get_subdomain_info "$domain" "$subdomain"
else
    # Show info for default subdomains in specified order
    for sub in www lb-01 web-01 web-02; do
        get_subdomain_info "$domain" "$sub"
    done
fi
